<!-- BotÃ³n para abrir el modal -->
<button id="openModal" class="px-4 py-2 bg-blue-500 text-white rounded"
  >Open Modal</button
>

<!-- Modal -->
<div
  id="myModal"
  class="fixed top-0 left-0 w-full h-full flex items-center justify-center bg-black bg-opacity-50 hidden"
>
  <div
    class="bg-white rounded shadow-lg p-8 m-4 max-w-xs max-h-full text-center relative"
  >
    <button
      id="closeModal"
      class="absolute top-0 right-0 m-4 text-2xl font-bold cursor-pointer"
      >X</button
    >
    <h1 class="text-2xl">Modal Title</h1>
    <p class="text-gray-500">This is a modal.</p>
    <!-- <button id="closeModal" class="mt-4 px-4 py-2 bg-red-500 text-white rounded"
      >Close</button
    > -->
  </div>
</div>

<script>
  const openModal = document.getElementById("openModal");
  const closeModal = document.getElementById("closeModal");
  const myModal = document.getElementById("myModal");

  openModal.addEventListener("click", function () {
    myModal.classList.remove("hidden");
  });

  closeModal.addEventListener("click", function () {
    myModal.classList.add("hidden");
  });
</script>
