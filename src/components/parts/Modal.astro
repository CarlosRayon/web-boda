---
import Icon from "astro-icon";
const { title, id, open, close } = Astro.props;
---

<div
  id={id}
  class="modal fixed top-0 left-0 w-full h-full items-center justify-center hidden animate__animated animate__bounceIn"
>
  <div class="modal__content rounded relative">
    <button id={close} class="close-modal">
      <Icon name="mdi:close" class="close-icon" />
    </button>

    <div class="modal__title">
      <h1 slot="title">{title}</h1>
    </div>

    <div class="modal__body">
      <slot name="body" />
    </div>

    <div class="modal__footer">
      <slot name="footer" />
    </div>
  </div>
</div>

<style lang="scss">
  @import "../../styles/variables/_color.scss";

  .modal {
    background-color: rgba(135, 111, 111, 0.5);
    padding: 10px;
    .modal__content {
      width: 100%;
      max-width: 600px;
      padding: 2rem;
      text-align: center;
      background-image: url("/assets/images/fondo.webp");
      background-repeat: no-repeat;
      background-attachment: fixed;
      background-size: cover;
    }
    .modal__title {
      h1 {
        margin-bottom: 1rem;
        color: $color-dark-green;
        font-weight: 700;
        font-size: 1.9rem;
      }
    }

    .modal__body {
      color: $color-dark-green;
    }

    .modal__footer {
      margin-top: 30px;
    }
    .close-modal {
      position: absolute;
      top: 5px;
      right: 7px;
      border-radius: 50%;
      background: transparent;
      border: none;
      outline: none;
      padding: 5px;
      background-color: $color-gold;
      cursor: pointer;
      .close-icon {
        height: 20px;
        color: white;
      }
    }
  }

  .hidden {
    display: none;
  }
  .show {
    display: flex;
  }
</style>

<script define:vars={{ id: id, open: open, close: close }}>
  const openModal = document.getElementById(open);
  const closeModal = document.getElementById(close);
  const modal = document.getElementById(id);

  openModal.addEventListener("click", function () {
    modal.classList.remove("hidden");
    modal.classList.add("show");
  });

  closeModal.addEventListener("click", function () {
    modal.classList.add("hidden");
    modal.classList.remove("show");
  });
</script>
