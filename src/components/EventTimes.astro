---
import TitleSection from "./parts/TitleSection.astro";
import { Icon } from "astro-icon";

const linkBusSanvi = import.meta.env.PUBLIC_LINK_BUS_SANVI;
const linkBusComillas = import.meta.env.PUBLIC_LINK_BUS_COMILLAS;
const linkBusCabe = import.meta.env.PUBLIC_LINK_BUS_CABE;
---

<!-- component -->
<section class="container mx-auto w-full h-full">
  <TitleSection title="Horarios" toUpper />

  <div class="relative wrap overflow-hidden p-10 h-full">
    <div
      class="border-2-2 absolute border-opacity-20 border-gray-700 h-full border"
      style="left: 50%"
    >
    </div>
    <!-- right timeline -->
    <div class="mb-8 flex justify-between items-center w-full right-timeline">
      <div class="order-1 w-5/12"></div>
      <div
        class="z-20 flex items-center order-1 shadow-xl w-8 h-8 p-1 rounded-full bg-white"
      >
        <Icon name="mdi:bus" />
      </div>
      <div
        class="order-1 rounded-lg shadow-xl w-5/12 px-6 py-4 bus-sanvi cursor-pointer animate__animated animate__backInRight time-border"
        title="Picha para ubicacion"
      >
        <a href={linkBusSanvi} target="_blank">
          <h3 class="mb-3 font-bold text-gray-800 text-xl">San Vicente</h3>
          <p
            class="text-sm leading-snug tracking-wide text-gray-900 text-opacity-100"
          >
            Salida a las <strong>00:00</strong> desde la parada autobus.
          </p>
        </a>
      </div>
    </div>

    <!-- left timeline -->
    <div
      class="mb-8 flex justify-between flex-row-reverse items-center w-full left-timeline"
    >
      <div class="order-1 w-5/12"></div>
      <div
        class="z-20 flex items-center order-1 shadow-xl w-8 h-8 p-1 rounded-full bg-white"
      >
        <Icon name="mdi:bus" />
      </div>
      <div
        class="order-1 rounded-lg shadow-xl w-5/12 px-6 py-4 bus-comillas cursor-pointer text-end animate__animated animate__backInLeft time-border"
        title="Picha para ubicacion"
      >
        <a href={linkBusComillas} target="_blank">
          <h3 class="mb-3 font-bold text-gray-800 text-xl">Comillas</h3>
          <p
            class="text-sm font-medium leading-snug tracking-wide text-gray-800text-opacity-100"
          >
            Salida a las <strong>00:00</strong> desde la parada del autobus a lado
            del palacio.
          </p>
        </a>
      </div>
    </div>

    <!-- right timeline -->
    <div class="mb-8 flex justify-between items-center w-full right-timeline">
      <div class="order-1 w-5/12"></div>
      <div
        class="z-20 flex items-center order-1 shadow-xl w-8 h-8 p-1 rounded-full bg-white"
      >
        <Icon name="mdi:bus" />
      </div>
      <div
        class="order-1 rounded-lg shadow-xl w-5/12 px-6 py-4 bus-cabe cursor-pointer animate__animated animate__backInRight time-border"
        title="Picha para ubicacion"
      >
        <a href={linkBusCabe} target="_blank">
          <h3 class="mb-3 font-bold text-gray-800 text-xl">Cabezon</h3>
          <p
            class="text-sm leading-snug tracking-wide text-gray-900 text-opacity-100"
          >
            Salida a las <strong>00:00</strong> desde la parada del autobus enfrente
            del restaurante el Cruze.
          </p>
        </a>
      </div>
    </div>

    <!-- left timeline -->
    <div
      class="mb-8 flex justify-between flex-row-reverse items-center w-full left-timeline text-end"
    >
      <div class="order-1 w-5/12"></div>
      <div
        class="z-20 flex items-center order-1 shadow-xl w-8 h-8 p-1 rounded-full bg-white"
      >
        <Icon name="emojione-monotone:party-popper" />
      </div>
      <div
        class="order-1 rounded-lg shadow-xl w-5/12 px-6 py-4 animate__animated animate__backInLeft"
      >
        <h3 class="mb-3 font-bold text-xl">Boda</h3>
        <p
          class="text-sm font-medium leading-snug tracking-widetext-opacity-100"
        >
          <strong>00:00</strong> Â¡Que empiece la fiesta!
        </p>
      </div>
    </div>

    <!-- right timeline -->
    <div class="mb-8 flex justify-between items-center w-full right-timeline">
      <div class="order-1 w-5/12"></div>
      <div
        class="z-20 flex items-center order-1 shadow-xl w-8 h-8 p-1 rounded-full bg-white"
      >
        <Icon name="mdi:bus" />
      </div>
      <div
        class="order-1 rounded-lg shadow-xl w-5/12 px-6 py-4 bus-cabe animate__animated animate__backInRight"
      >
        <h3 class="mb-3 font-bold text-gray-800 text-xl">Bus vuelta</h3>
        <p
          class="text-sm leading-snug tracking-wide text-gray-900 text-opacity-100"
        >
          Salida a las <strong>00:00</strong> desde el restaurante. Autobus de vuelta
          que hara parada en los mismos sitios que la ida.
        </p>
      </div>
    </div>
  </div>
</section>

<style lang="scss">
  .time-border {
    border: 2px solid white;
    transition: border-color 0.5s ease;

    &:hover {
      border-color: green;
    }
  }
</style>
