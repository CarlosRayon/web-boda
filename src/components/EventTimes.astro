---
import TitleSection from "./parts/TitleSection.astro";
import { Icon } from "astro-icon";

const linkBusSanvi = import.meta.env.PUBLIC_LINK_BUS_SANVI;
const linkBusComillas = import.meta.env.PUBLIC_LINK_BUS_COMILLAS;
const linkBusCabe = import.meta.env.PUBLIC_LINK_BUS_CABE;
---

<!-- component -->
<section class="container mx-auto w-full h-full">
  <TitleSection title="Horarios" toUpper />

  <div class="relative wrap overflow-hidden p-10 h-full">
    <div
      class="border-2-2 absolute border-opacity-20 border-gray-700 h-full border"
      style="left: 50%"
    >
    </div>
    <!-- right timeline -->
    <div class="mb-8 flex justify-between items-center w-full right-timeline">
      <div class="order-1 w-5/12"></div>
      <div
        class="z-20 flex items-center order-1 shadow-xl w-8 h-8 p-1 rounded-full bg-white"
      >
        <Icon name="mdi:bus" />
      </div>
      <div
        class="order-1 rounded-lg shadow-xl w-5/12 px-6 py-4 bus-sanvi cursor-pointer animate__animated animate__backInRight dark:hover:bg-green-100" title="Picha para ubicacion"
      >
        <h3 class="mb-3 font-bold text-gray-800 text-xl">
          12:00 - San Vicente
        </h3>
        <p
          class="text-sm leading-snug tracking-wide text-gray-900 text-opacity-100"
        >
          Parada autobus
        </p>
      </div>
    </div>

    <!-- left timeline -->
    <div
      class="mb-8 flex justify-between flex-row-reverse items-center w-full left-timeline"
    >
      <div class="order-1 w-5/12"></div>
      <div
        class="z-20 flex items-center order-1 shadow-xl w-8 h-8 p-1 rounded-full bg-white"
      >
        <Icon name="mdi:bus" />
      </div>
      <div
        class="order-1 rounded-lg shadow-xl w-5/12 px-6 py-4 bus-comillas cursor-pointer text-end animate__animated animate__backInLeft dark:hover:bg-green-100" title="Picha para ubicacion"
      >
        <h3 class="mb-3 font-bold text-gray-800 text-xl ">12:15 - Comillas</h3>
        <p
          class="text-sm font-medium leading-snug tracking-wide text-gray-800text-opacity-100"
        >
          Parada del autobus
        </p>
      </div>
    </div>

    <!-- right timeline -->
    <div class="mb-8 flex justify-between items-center w-full right-timeline">
      <div class="order-1 w-5/12"></div>
      <div
        class="z-20 flex items-center order-1 shadow-xl w-8 h-8 p-1 rounded-full bg-white"
      >
        <Icon name="mdi:bus" />
      </div>
      <div
        class="order-1 rounded-lg shadow-xl w-5/12 px-6 py-4 bus-cabe cursor-pointer animate__animated animate__backInRight dark:hover:bg-green-100" title="Picha para ubicacion"
      >
        <h3 class="mb-3 font-bold text-gray-800 text-xl">12:45 - Cabezon</h3>
        <p
          class="text-sm leading-snug tracking-wide text-gray-900 text-opacity-100"
        >
          Parada del autobus
        </p>
      </div>
    </div>

    <!-- left timeline -->
    <div
      class="mb-8 flex justify-between flex-row-reverse items-center w-full left-timeline text-end "
    >
      <div class="order-1 w-5/12"></div>
      <div
        class="z-20 flex items-center order-1 shadow-xl w-8 h-8 p-1 rounded-full bg-white"
      >
        <Icon name="emojione-monotone:party-popper" />
      </div>
      <div class="order-1 rounded-lg shadow-xl w-5/12 px-6 py-4 animate__animated animate__backInLeft">
        <h3 class="mb-3 font-bold text-xl">13:30 Boda</h3>
        <p
          class="text-sm font-medium leading-snug tracking-widetext-opacity-100"
        >
          Â¡Que empiece la fiesta!
        </p>
      </div>
    </div>

  <!-- right timeline -->
    <div class="mb-8 flex justify-between items-center w-full right-timeline">
      <div class="order-1 w-5/12"></div>
      <div
        class="z-20 flex items-center order-1 shadow-xl w-8 h-8 p-1 rounded-full bg-white"
      >
        <Icon name="mdi:bus" />
      </div>
      <div
        class="order-1 rounded-lg shadow-xl w-5/12 px-6 py-4 bus-cabe animate__animated animate__backInRight" title="Picha para ubicacion"
      >
        <h3 class="mb-3 font-bold text-gray-800 text-xl">00:00 - Bus vuelta</h3>
        <p
          class="text-sm leading-snug tracking-wide text-gray-900 text-opacity-100"
        >
          Autobus de vuelta parando mismo sitio que la ida
        </p>
      </div>
    </div>

  </div>


</section>

<script define:vars={{ linkBusSanvi, linkBusComillas, linkBusCabe }}>
  document.querySelector(".bus-sanvi").addEventListener("click", function (e) {
    e.preventDefault();
    window.open(linkBusSanvi, "_blank");
  });

  document
    .querySelector(".bus-comillas")
    .addEventListener("click", function (e) {
      e.preventDefault();
      window.open(linkBusComillas, "_blank");
    });
  document.querySelector(".bus-cabe").addEventListener("click", function (e) {
    e.preventDefault();
    window.open(linkBusCabe, "_blank");
  });
</script>
