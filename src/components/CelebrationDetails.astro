      <h3>Otra</h3>
      <p>Otra cosa</p>
      <a href="#" class="button-link">Link otra cosa</a>
    </div>
  </div>
</section>

<style lang="scss">
  @import "../styles/variables/_color.scss";

  .celebration {
    padding: 50px 0;
  }

  .celebration__title {
    text-align: center;
    background-color: $color-gold;
    border-radius: 10% 54% 35% 10% / 10% 31% 10% 32%;
    min-width: 50%;
    color: white;
    font-size: 4rem;
    letter-spacing: 5px;
    padding: 0 10px;
  }

  .celebration__info {
    padding: 15px 0;
    text-align: center;
    display: flex;
    flex-direction: column;
    place-items: center;
    gap: 18px;
    h3 {
      color: $color-dark-red;
      font-size: 2rem;
    }

    p {
      font-size: 1.5rem;
    }
  }

  .button-link {
    display: inline-block;
    padding: 10px 20px;
    color: white;
    background-color: $color-dark-red;
    text-decoration: none;
    border-radius: 5px;
    transition: 0.5s ease;
    border-radius: 30px;
    width: 200px;
  }

  .button-link:hover {
    background-color: inherit;
    color: $color-dark-red;
    border: 1px solid $color-gold;
  }
</style>
